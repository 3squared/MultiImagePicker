<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity" tools:ignore="MergeRootFrame" android:orientation="vertical"
    android:weightSum="20"
    >


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18.3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:background="#ff333333"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.44"
            android:text="@android:string/cancel"
            android:onClick="onClickCancel"

            style="@style/Btn"
            />
        <View
            android:background="#5c5c5c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            />

        <FrameLayout
            android:id="@+id/done_btn"
            android:background="@drawable/btn_selector"
            android:paddingRight="3dp"
            android:clickable="true"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.44"
            android:onClick="onClickDone"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/done_button_badge"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:background="@color/checked_photo"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"

                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginRight="10dp"

                    style="@style/Btn"

                    />
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/done_button_text"
                    android:drawablePadding="8dp"
                    android:textStyle="bold"
                    android:text="@android:string/ok"
                    style="@style/Btn"
                    />
            </LinearLayout>
        </FrameLayout>



    </LinearLayout>



    </LinearLayout>







